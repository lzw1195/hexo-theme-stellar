.tag-plugin.folders
  display: block
  margin: 1rem 0
  border-radius: $border-block
  font-size: $fs-14
  background: var(--theme-bg)
  border: 1px solid var(--theme-border)
  overflow: hidden
  .folder
    display: block
    font-size: $fs-14
    background: var(--theme-bg)
    &:last-child summary
      border-bottom: none
  summary
    display: block
    cursor: pointer
    color: var(--text-p2)
    font-weight: 500
    position: relative
    line-height: 1.2
    outline: none
    padding: 1rem
    border-bottom: 1px solid var(--theme-border)
    &:last-child
      border-bottom: none
    >
      p,h1,h2,h3,h4,h5,h6
        display: inline
        border-bottom: none !important
    &:after
      position: absolute
      content: '+'
      text-align: center
      top: 50%
      transform: translateY(-50%)
      right: 1rem
    &:hover
      color: var(--text-p0)


.tag-plugin.folders details[open]
  &:last-child 
    summary
      border-bottom: 1px solid var(--theme-border)
    .body
      border-bottom: none
  >summary
    color: var(--text-p1)
    font-weight: 700
    &:after
      content: '-'
  >div.body
    background: var(--card)
    padding: 1rem
    border-bottom: 1px solid var(--theme-border)
    font-size: $fs-15
    >:first-child
      margin-top: 0
    >:last-child
      margin-bottom: 0
